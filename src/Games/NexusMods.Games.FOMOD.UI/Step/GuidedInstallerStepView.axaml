<reactiveUi:ReactiveUserControl
    x:TypeArguments="ui:IGuidedInstallerStepViewModel" xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:ui="clr-namespace:NexusMods.Games.FOMOD.UI"
    mc:Ignorable="d" d:DesignWidth="1232" d:DesignHeight="672"
    x:Class="NexusMods.Games.FOMOD.UI.GuidedInstallerStepView">

    <Design.DataContext>
        <ui:GuidedInstallerStepDesignViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <TextBlock Classes="H1" Grid.Row="0" Grid.Column="0" x:Name="ModName" />
        <TextBlock Classes="TopTitle" Grid.Row="1" Grid.Column="0" x:Name="StepName" />

        <TextBlock Classes="TopTitle" VerticalAlignment="Top" Grid.Row="2" x:Name="InstallationCompleteScreenTextBlock" IsVisible="False">
            You can change these options anytime by clicking the TODO button in the mod list.
        </TextBlock>

        <Grid Grid.Row="2" ColumnDefinitions="*,*" x:Name="GroupsGrid">
            <ScrollViewer Grid.Column="0">
                <ItemsControl x:Name="GroupItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <ScrollViewer Grid.Column="1">
                <StackPanel>
                    <TextBlock Classes="Small" x:Name="HighlightedOptionDescription" />
                    <Image Stretch="Uniform" IsVisible="False" x:Name="HighlightedOptionImage" />
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <reactiveUi:ViewModelViewHost Grid.Row="3" Grid.Column="0" x:Name="FooterStepperViewHost" />
    </Grid>

</reactiveUi:ReactiveUserControl>
