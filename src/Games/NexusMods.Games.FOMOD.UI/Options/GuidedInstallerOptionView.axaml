<reactiveUi:ReactiveUserControl
    x:TypeArguments="ui:IGuidedInstallerOptionViewModel" xmlns="https://github.com/avaloniaui"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:NexusMods.Games.FOMOD.UI"
    mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="80"
    x:Class="NexusMods.Games.FOMOD.UI.GuidedInstallerOptionView">

    <Design.DataContext>
        <ui:GuidedInstallerOptionDesignViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto">
        <Grid.Styles>
            <Style Selector="TextBlock.customHighlighted">
                <Setter Property="Background" Value="Gray"/>
            </Style>
        </Grid.Styles>

        <CheckBox Grid.Column="0" x:Name="CheckBox"/>
        <TextBlock Margin="0, 6, 0, 0" Grid.Column="1" Classes="ButtonMontserratSemi" x:Name="CheckBoxTextBlock" />
    </Grid>

</reactiveUi:ReactiveUserControl>
